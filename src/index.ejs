<%
const cdnDomains = [
  'https://ajax.googleapis.com/',
  'https://fonts.googleapis.com/',
  'https://storage.googleapis.com/',
  'https://cdnjs.cloudflare.com/',
  'https://unpkg.com/'
];
const cdnJsFiles = [
  '/js/modernizr-custom.js',
  'https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/localforage/1.7.3/localforage.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/rxjs/6.5.3/rxjs.umd.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/fuse.js/3.4.5/fuse.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/pixi.js/5.1.5/pixi.min.js',
];
const cdnCssFiles = [
  'https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css',
];
const jsFiles = cdnJsFiles.concat(htmlWebpackPlugin.files.js);
htmlWebpackPlugin.files.js = [];
const cssFiles = cdnCssFiles.concat(htmlWebpackPlugin.files.css);
htmlWebpackPlugin.files.css = [];
%>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">
  <meta name="theme-color" content="#ffffff">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png">
  <link rel="manifest" href="/manifest.json">
  <title>Comic Frontier Booth Map</title>
  <% cdnDomains.forEach(url => { %>
  <link rel="preconnect" href="<%= url %>"><% }) %>
  <% jsFiles.forEach(url => { if (url.indexOf('://') > 0) { %>
  <link as="script" href="<%= url %>" crossorigin="anonymous" rel="preload"><% } else { %>
  <link as="script" href="<%= url %>" rel="preload"><% }}) %>
  <% cssFiles.forEach(url => { %>
  <link as="style" href="<%= url %>" rel="preload" onload="this.onload=null;this.rel='stylesheet'">
  <noscript>
    <link rel="stylesheet" href="<%= url %>">
  </noscript><% }) %>
</head>

<body>
  <div id="app">Loading...</div>
  <div id="stage"></div>
  <% jsFiles.forEach(url => { if (url.indexOf('://') > 0) { %>
  <script src="<%= url %>" crossorigin="anonymous"></script><% } else { %>
  <script src="<%= url %>"></script><% }}) %>
</body>

</html>
